@charset "utf-8"

background-color = hsl(0, 0%, 50%) //серый
font-color = hsl(210, 1%, 70%) //светло-серый

*
	margin 0
	padding 0
	box-sizing border-box
	vertical-align middle

html
	display table
	width 100%
	height 100%

body
	display table-cell
	width 100%
	height 100%
	position relative
	background background-color url('../images/background.jpg') no-repeat 50% center
	background-size cover
	overflow hidden
	font-size 14px
	font-family 'Roboto Condensed', Arial, Helvetica, sans-serif
	color font-color
	text-align center

#loader
	display inline-block
	font-size 20px
	text-align center
	.names
		margin 15px 0
		white-space nowrap
		font-size 25px
		font-weight 400
		&>*
			display inline-block
		.name
			color white
	.motto
		font-size 16px

	.spinner
		margin 40px auto
		width 50px
		height 40px
		text-align center
		font-size 10px
		& > div
			background-color font-color
			height 100%
			width 6px
			display inline-block
			animation sk-stretchdelay 1.2s infinite ease-in-out
		.rect2
			animation-delay -1.1s
		.rect3
			animation-delay -1.0s
		.rect4
			animation-delay -0.9s
		.rect5
			animation-delay -0.8s

#main
	display none

@keyframes sk-stretchdelay
	0%
	40%
	100%
		transform scaleY(0.4)
	20%
		transform scaleY(1.0)
